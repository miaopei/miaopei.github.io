.sidebar .sidebar-button {
  &:not(:first-child) {
    margin-top: 15px;
  }

  button {
    button($orange);
    border: 1px solid $orange;
    border-radius: 4px;

    i[class^='fa'] {
      margin-right: 5px;
    }
  }
}

.feed-link, .chat {
  margin-top: 10px;

  a {
    display: inline-block;
    padding: 0 15px;
    color: rgb(252, 100, 35);
    border: 1px solid rgb(252, 100, 35) !important;
    border-radius: 4px;

    i {
      color: rgb(252, 100, 35);
      font-size: 14px;
    }

    &:hover {
      color: white;
      background: rgb(252, 100, 35);

      i { color: white; }
    }
  }
}
